<ul class="collapsible" data-collapsible='accordion'>
  <% data.forEach(doc => { %>

    <%const blog =doc.data(); %>

    <li><div class="collapsible-header #ef5350 red lighten-1">
      
     <div > <%=blog.title%></div>
     <!-- <div class='container' style='margin-left: 500px;'> <a href="#"> <i class="small material-icons">delete</i></a></div> -->
