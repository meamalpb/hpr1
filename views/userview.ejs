<!-- model for new job -->
     
    <div id="modal-create" class="modal" style="background: rgba( 52, 27, 76, 0.70 );
    box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
    backdrop-filter: blur( 8.5px );
    -webkit-backdrop-filter: blur( 8.5px );
    border-radius: 10px;
    border: 1px solid rgba( 255, 255, 255, 0.18 );">
      <div class="modal-content">
        <h4 style="color: aliceblue;">Add New Project</h4><br />
        <form id="create-form" action="/addjob" method="POST">
          <div class="input-field">
            <input type="text" id="name" name="name" required>
            <label for="name"> Name</label>
          </div>
          <div class="input-field">
            <input type="text" id="guidename" name="guidename" required>
            <label for="guidename"> Guide Name</label>
          </div>
          <div class="input-field">
            <input type="text" id="guidedepartment" name="guidedepartment" required>
            <label for="guidedepartment">Guide Department</label>
          </div>
          <div class="input-field col s12">
            <select id="degree" name="degree">
              <option value="" disabled selected>Choose your option</option>
              <option value="B.tech">B.tech</option>
              <option value="M.tech">M.tech</option>
               
            </select>
            <label for="degree" >Materialize Select</label>
          </div>
<div>
  <p>Branch</p>
          <p>
            <label>
              <input name="branch" value="ECE" type="radio" checked />
              <span>ECE</span>
            </label>
          </p>
          <p>
            <label>
              <input name="branch" value="EEE" type="radio" />
              <span>EEE</span>
            </label>
          </p>
          <p>
            <label>
              <input  name="branch"  value ="Other" type="radio"  />
              <span>Other</span>
            </label>
          </p>
        </div>

          <div class="input-field">
            <input type="text" id="projecttitle" name="projecttitle" required>
            <label for="projecttitle"> Project Title</label>
          </div>

          <div>
            <p>Project Category</p>
          <p>
            <label>
              <input id="projectcategory" name="projectcategory"  value="Embedded" type="checkbox" />
              <span>Embedded</span>
            </label>
          </p>
          <p>
            <label>
              <input id="projectcategory" name="projectcategory"  value="VLSI" type="checkbox" />
              <span>VLSI</span>
            </label>
          </p>
          <p>
            <label>
              <input id="projectcategory" name="projectcategory"  value="Computer Vision" type="checkbox" />
              <span>Computer Vision</span>
            </label>
          </p>
          <p>
            <label>
              <input id="projectcategory" name="projectcategory"  value="" type="checkbox" />
              <span>VLSI</span>
            </label>
          </p>
          <p>
            <label>
              <input id="projectcategory" name="projectcategory"  value="VLSI" type="checkbox" />
              <span>VLSI</span>
            </label>
          </p>
        </div>

          <div class="input-field">
            <textarea id="content" class="materialize-textarea" name="content" required></textarea>
            <label for="content">Project Description</label>
          </div>
          <!-- <div class="input-field">
            <input id="Url" type="url"  name = "url" required>
            <label for="url">URL Of Project File</label>
          </div> -->
          <button class="btn red darken-2 z-depth-0">Enter</button>
        </form>
      </div>
    </div>




     <!-- Modal Structure for otp-->
  <div id="modal1" class="modal bottom-sheet" style="background: rgba( 52, 27, 76, 0.70 );
  box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
  backdrop-filter: blur( 8.5px );
  -webkit-backdrop-filter: blur( 8.5px );
  border-radius: 10px;
  border: 1px solid rgba( 255, 255, 255, 0.18 );">
    <div class="modal-content">
      <h4>Enter the OTP that you recieved</h4>
      
    </div>
    <form>
      <div class="input-field">
        <input type="text" id="enterotp" required>
        <label for="enterotp" style="color: aliceblue;">Enter OTP here</label>
      </div>
    <div class="modal-footer" style="background: rgba( 52, 27, 76, 0.70 );
    
    backdrop-filter: blur( 0px );
    -webkit-backdrop-filter: blur( 0px );
    border-radius: 10px;"
    >
   
      <a href="#!" class="modal-close waves-effect waves-green btn-flat" style ="color:white">Agree</a>
    </div>
  </form>
  </div>


   <!-- Modal for request Structure -->
  <div>
   <div id="modal2" class="modal bottom-sheet "  style="background: rgba( 255, 255, 255, 0.30 );
   box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
   backdrop-filter: blur( 7.5px );
   -webkit-backdrop-filter: blur( 7.5px );
